{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "lib": ["dom", "es2022"],
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["../assets/*"],
      "@client/*": ["./client/*"],
      "@extension-host/*": ["./extension-host/*"],
      "@main/*": ["./main/*"],
      "@node/*": ["./node/*"],
      "@renderer/*": ["./renderer/*"],
      "@shared/*": ["./shared/*"],
      "@node_modules/*": ["../node_modules/*"],
      "vite": ["./@types/shims-vite.d.ts"]
    },
    "experimentalDecorators": true,
    "typeRoots": [
      // Include default type declarations
      "./node_modules/@types",
      // Include extensions' type declarations
      "./extensions/src",
      // Include additions and overrides
      "src/@types"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "incremental": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "outDir": ".erb/dll"
  },
  "include": ["src", "assets", "!**/*.test.{ts,tsx}"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "release/build",
    "release/app/dist",
    ".erb/dll",
    "extensions",
    "lib/platform-bible-react",
    "lib/platform-bible-utils",
    "lib/papi-dts"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}

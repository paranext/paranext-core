    "patterns": [
      "!**/**",
      "src/main/**",
      "src/node/**",
      "src/shared/**"
    ],
    "logLevel": "quiet"
  },
  "nodemonConfig": {
    "watch": [
      "src/client/**",
      "src/extension-host/**",
      "src/node/**",
      "src/shared/**",
      "extensions/dist/**"
    ],
    "ext": "ts,js,json",
    "delay": 250
